{
	"name": "@design/bottomsheet",
	"version": "1.0.0",
	"description": "Bottom drawer component overlays ui with options",
	"dependencies" : {
		"@design/scrim" : "^1.0.0",
		"@design/buttons" : "^1.0.0",
		"@design/bottomsheetcontext" : "^1.0.0"
	},
	"browser": "dist/src/index.js",
	"scripts": {
		"transpile": "babel -d dist/ --extensions .ts,.tsx src/",
		"emitDeclarations": "tsc --declaration --emitDeclarationOnly",
		"build": "npm run emitDeclarations && npm run transpile"
	},
    "type": "module",
	"module": "dist/src/index.js",
    "main": "dist/src/index.js",
	"exports":  {
		".": {
			"import": ["./src/index.ts", "./src/BottomSheet.tsx", "./src/BottomSheet.style.tsx"],
			"require": ["./dist/index.js", "./dist/BottomSheet.js", "./dist/BottomSheet.style.js"]
		}
	},
	"types": "types/packages/design_system/components/bottom_sheet/src/index.d.ts",
	"browserslist": [
		"last 2 Chrome versions",
		"last 2 Firefox versions",
		"last 2 Edge versions",
		"last 2 Opera versions",
		"last 2 FirefoxAndroid versions",
		"last 2 iOS version",
		"last 2 safari version"
	]

}	
